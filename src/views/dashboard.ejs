<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <%- include ("templates/navigation.ejs") %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <% if(maintenanceStatus == false){ %>
                <h1 class="m-0 text-dark">Панель управления</h1>
                <% }else{ %>
                    <h1 class="m-0 text-dark">Панель управления <span class="maintenanceActive">Активно обслуживание!</span></h1>
                <% } %>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Главная</a></li>
              <li class="breadcrumb-item active">Панель управления v1</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="card card-primary card-outline">
              <div class="card-body">
                <h3><%- botInfo.username %> <%- data.user.localPresence.status %></h3>
              </div>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-primary">
              <div class="inner">
                <h3><%- botInfo.users %></h3>
                <p>Людей</p>
              </div>
              <div class="icon">
                <i class="fas fa-users"></i>
              </div>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-dark">
              <div class="inner">
                <h3><%- botInfo.guilds %></h3>
                <p>Серверов</p>
              </div>
              <div class="icon">
                <i class="fas fa-server"></i>
              </div>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h3>Продолжение следует!</h3>

                <p>Не стесняйтесь вносить свой вклад на GitHub.</p>
              </div>
              <a href="https://github.com/fydne/fydne" target="_blank" class="small-box-footer">Больше информации <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">

        </div>
        <!-- /.row (main row) -->
      </div><!-- /.container-fluid -->
    </section>
    <div class="botFunctionWidget botFunctionWidget_quickFunctions">
      <h4><b>Игровой статус:</b><br><small>Измените здесь игру своего бота.</small></h4>
      <form method="post" class="changeGame" action="/change-game-status">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <input class="mdl-textfield__input " type="text" name="gameStatus" id="gameChangeInput">
              <label class="mdl-textfield__label" for="gameChangeInput">Изменение статуса игры..</label>
          </div>
          <button style="vertical-align: super;" type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
              Сохранить статус игры
          </button>
      </form>
      <hr>
      <h4><b>Изменить статус:</b><br><small>Изменить статус вашего бота.</small></h4>
      <form method="post" action="/change-status">
          <select name="status" class="botStatusSelection">
              <option value="<%= data.user.localPresence.status %>">Текущий статус: <%= data.user.localPresence.status %></option>
              <option value="online">Онлайн</option>
              <option value="idle">Не активен</option>
              <option value="dnd">Не беспокоить</option>
              <option value="invisible">Невидимый</option>
          </select>
          <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
              Изменить статус
          </button>
      </form>
      <hr>
      <h4><b>Версия:</b><br><small>Измените здесь версию своего бота.</small></h4>
      <form method="post" class="changever" action="/change-ver-status">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <input class="mdl-textfield__input " type="text" name="verStatus" id="verChangeInput">
              <label class="mdl-textfield__label" for="verChangeInput">Изменение версии..</label>
          </div>
          <button style="vertical-align: super;" type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
              Обновить версию
          </button>
      </form>
      <hr>
      <h4><b>Разработка:</b><br><small>Здесь вы можете добавить некоторые тестовые функции для вашего собственного проекта. Я добавил некоторые функции, которые могут быть полезны для вас!</small></h4>
      <a href="/outputClient"><button id="outputClientObjBtn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">Выходной клиентский объект</button></a>
      <a href="/outputGuilds"><button id="outputClientObjBtn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">Выходной объект сервера</button></a>
      <a href="/testingNewFunction"><button id="testNewFunctionBtn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Тестирование новой функции</button></a>
  </div>
  <div class="botWidget botWidget_botStatus">
      <h4><b>Статус</b></h4>
      <hr>
      <p class="bot_username"><b>Имя:</b> <%= botInfo.username %></p>
      <p class="bot_game"><b>Игра:</b> <%= data.user.localPresence.game.name %></p>
      <span class="bot_status"><b>Статус:</b>
          <% if(data.user.localPresence.status === "online"){ %>
              <div class="statusSymbol statusSymbolOnline"></div> Онлайн
          <% }else if(data.user.localPresence.status === "idle"){ %>
              <div class="statusSymbol statusSymbolIdle"></div> Не активен
          <% }else if(data.user.localPresence.status === "dnd"){ %>
              <div class="statusSymbol statusSymbolDND"></div> Не беспокоить
          <% }else if(data.user.localPresence.status === "invisible"){ %>
              <div class="statusSymbol statusSymbolInvisible"></div> Невидимый
          <% }%>
      </span>
      <hr>
      <h4><b>Техническое обслуживание:</b></h4>
      <p class="warning"><b>Внимание! &raquo; </b>Эта функция находится на ранней стадии!</p>
      <% if(maintenanceStatus == false){ %>
        <button id="enableButtonForMaintanance" style="width: 100%;" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">Активировать обслуживание</button><br class="brMaintenance"><br class="brMaintenance">
        <a href="/activateMaintenance"><button style="width: 100%;" id="maintenanceActivatingButton" disabled class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Подтверждение обслуживания</button></a>
        <% }else{ %>
        <a href="/deactivateMaintenance"><button style="width: 100%;" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Деактивировать обслуживание</button></a>
        <% } %>
  </div>
  <br>
  <div class="botWidget botVersionWidget">
      <h4><b>Версия: <%= botData.bot_version %></b></h4>
      <hr>
      <p><b>Список дел:</b></p>
      <small>// СДЕЛАТЬ: Добавить функцию для изменения bot_version</small><br>
      <small>// СДЕЛАТЬ: Добавление списка ToDO для разработчиков (новая страница)</small><br>
      <small>// СДЕЛАТЬ: Добавление журнала статуса для страницы статуса</small><br>
      <small>// СДЕЛАТЬ: Изменение бота только для создателя бота и добавленых</small>
  </div>
</div>
<div class="mdl-cell mdl-cell--2-col">
</div>
    <!-- /.content -->
  </div>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
</div>
</div>
</main>
<div class="row">

</div>
<!-- /.row (main row) -->
</div><!-- /.container-fluid -->
</section>
<!-- /.content -->
</div>

