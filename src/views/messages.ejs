<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <%- include ("templates/navigation.ejs") %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <% if(maintenanceStatus == false){ %>
                <h1 class="m-0 text-dark">Сообщения</h1>
                <% }else{ %>
                    <h1 class="m-0 text-dark">Сообщения <span class="maintenanceActive">Активно обслуживание!</span></h1>
                <% } %>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <main class="mdl-layout__content">
        <!-- page content -->
        <div class="page-content">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--3-col"></div>
                <div class="mdl-cell mdl-cell--6-col">
                    <h1><b>Сообщения</b></h1>
                    <hr>
                    <div class="messageWidget sendAdminMessage">
                        <h5>Отправить сообщение администраторам сервера:</h5>
                        <div class="messageWidgetContent">
                            <form class="serverAdministratorMessageForm" method="post" action="/send-serveradmin-dm-message">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" style="width: 100%;">
                                    <b>Напишите здесь свое сообщение администраторам сервера, у которых есть бот на своем сервере. (<i>ВНИМАНИЕ:</i> Используйте эту функцию только для важных вопросов (например, журналов изменений, уведомлений о техническом обслуживании и другой важной информации) или для собственных целей!)</b>
                                    <hr color="white">
                                    <textarea class="mdl-textfield__input" name="message" rows="4" id="serveradmin_message" placeholder="Напишите сюда ваше сообщение..."></textarea>
                                </div>
                                <button type="button" class="sendServerAdminMessageToActivateButton mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
                                    Отправить сообщение
                                </button>
                                <button type="submit" disabled class="sendServerAdminMessageConfirmButton mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
                                    Подтвердите отправку
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="mdl-cell mdl-cell--3-col">
                </div>
            </div>
        </div>
    </main>
</div>
<div class="mdl-cell mdl-cell--2-col">
</div>
